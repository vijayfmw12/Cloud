# Create a custom VPC
gcloud compute networks create cli-custom-vpc --subnet-mode=custom
echo "Network Created Successfully!"

# Create Subnet-X in custom VPC
gcloud compute networks subnets create subnet-x --region=us-central1 --range=10.3.1.0/24 --network=cli-custom-vpc
echo "Subnet-X Created Successfully!"

# Create Subnet-Y in custom VPC
gcloud compute networks subnets create subnet-y --region=us-central1 --range=10.4.1.0/24 --network=cli-custom-vpc
echo "Subnet-Y Created Successfully!"

#Instances
# Create instance-1a in subnet-x
gcloud compute instances create instance-1a --zone=us-central1-a --subnet=subnet-x --machine-type=e2-micro
echo "Instance-1a Created Successfully!"

# Create instance-1b in subnet-x
gcloud compute instances create instance-1b --zone=us-central1-b --subnet=subnet-x --machine-type=e2-micro --no-address
echo "Instance-1b Created Successfully!"

# Create instance-1c in subnet-x
gcloud compute instances create instance-1c --zone=us-central1-c --subnet=subnet-x --machine-type=e2-micro
echo "Instance-1c Created Successfully!"

# Create instance-2 in subnet-y
gcloud compute instances create instance-2 --zone=us-central1-f  --subnet=subnet-y --machine-type=e2-micro
echo "Instance-2 Created Successfully!"

# Create instance-3 in subnet-y
gcloud compute instances create instance-3 --zone=us-central1-f  --subnet=subnet-y --machine-type=e2-micro --no-address 
echo "Instance-3 Created Successfully!"

